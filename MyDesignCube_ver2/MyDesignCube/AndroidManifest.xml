<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.textviewex"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon2"
        android:label="@string/app_name"
        android:theme="@style/Theme.MyAppTheme" 
        >
        
        <activity android:name="com.example.mydesigncube.MainPageActivity"
            android:label="@string/app_name" android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        
        <activity
            android:name="com.example.mydesigncube.DesignSampleActivity"
            android:label="@string/DesignSample"/>
        
        
        <activity 
            android:name="com.example.mydesigncube.MyCubeControlActivity"
            android:label="@string/mycube"/>
        
        
        <!--스플래시(로딩) 액티비티-->
        <activity
            android:name="com.example.mydesigncube.Splash"
            android:configChanges="orientation|keyboardHidden"
             android:screenOrientation="portrait" 
            android:theme="@android:style/Theme.NoTitleBar" />
        <!--가로모드 금지/ loading 화면은 액션바 제외-->
   
        </application>

</manifest>
